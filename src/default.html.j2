    </p>
  </header>
{%- endmacro -%}
{%- macro renderContent() -%}
  <main>
    <section class="total-report">
      {{ renderReport(dc.report.total_report) }}
    </section>
    {% for chapter in dc.km.chapters %}
      {{ renderChapter(chapter, loop.index) }}
    {% else %}
      <p class="text-light">No chapters</p>
    {% endfor %}
  </main>
{%- endmacro -%}
{# ------------------------------------------------------------------------------------ #}
{#  HTML TEMPLATE                                                                       #}
{# ------------------------------------------------------------------------------------ #}
<html>
  <head>
    <title>DSW Questionnaire Report: {{dc.qtn.name}}</title>
    <meta charset="utf-8">
    <style>{% include "src/default.css" %}</style>
  </head>
  <body>
    <article class="dmp">
      {{ renderFrontPage() }}
      {{ renderContent() }}
    </article>
  </body>
</html>
